{
    "manifest_version": 3,
    "name": "DevLens - Web Dev Tools",
    "version": "1.0",
    "description": "Premium Web Development Toolkit with Screen Dimensions, Color Picker, and more.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon_16.png",
            "48": "icons/icon_48.png",
            "128": "icons/icon_128.png",
            "512": "icons/icon_512.png"
        }
    },
    "icons": {
        "16": "icons/icon_16.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png",
        "512": "icons/icon_512.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}